 {# {% if (authors) is defined and authors | length > 0  %} #}
 {% if (authors)  %}
 <table border="1">
    <thead>
        <tr>
            <th>id</th>
            <th>picture</th>
            <th>email</th>
            <th>username</th>
            <th>nombre books</th>
            <th> Link </th>
        </tr>
    </thead>
    <tbody>
       {% for author in authors  %}
            <tr>
                <td>{{author.id}}</td>
           <td>  <img width="100px" src="{{ asset(author.picture) }}" > </td>
               <td> {{author.email}}</td>
               <td> {{author.username | upper }}</td>
               <td> {{author.nb_books}}</td>
               <td> &emsp; <a href="show/details/{{author.id}}"> Lien vers les details de :   {{author.username}} </a>   &emsp;</td>

            </tr>
        {% endfor %}
    </tbody>
</table>
<p> le nombre des auteurs est : {{ authors | length  }} </p>
{% else %} 
<h1> Le tableau est vide  </h1>
{% endif %}
